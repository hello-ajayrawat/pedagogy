<section class="mt-5" id="login">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{question.question}}</h5>
                        <form action="/answers/{{question.id}}" method="post">
                            <div class="form-group">
                                <textarea name="answer" class="form-control" placeholder="Write your answer here..."></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Answer</button>
                        </form>
                    </div>
                </div>
                {{#each question.answers}}
                <div class="card mt-3">
                    <div class="card-body">
                        <small class="card-title">Answer by <b>{{answeredBy.name}}</b></small>
                        <p class="lead">{{body}}</p>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</section>